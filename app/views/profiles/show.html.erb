<div class="post-container">
  <div class="post">
      <div class="profile" style="color:white;">
        <div  class="mb-2" style="margin-top: 30px"><%=  image_tag url_for(@user.photo), class: "avatar-large" %></div>
        <div class="d-flex justify-content-center" style="gap: 10px; color:white;" >
          <h2  class="mb-5"><%= @user.nickname %></h2>
          <div style="color:white;">
            <% if user_signed_in? %>
              <% user_follow = current_user.following?(@user) %>
              <% if user_follow %>
                <h2><%= button_to "Following âœ”", unfollow_follower_path(@user), class: "btn btn-following", method: :post %></h2>
              <% else %>
                <h2><%= button_to "Follow", follow_follower_path(@user), class: "btn btn-follow", method: :post %></h2>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="d-flex justify-content-center" style="color:white;">
          <h3  class="mb-5", style="margin-right: 30px"><%= @user.posts.count %> Stories</h3>
          <h3  class="mb-5"><%= @user.followers_count %> Followers</h3>
          <h3  class="mb-5", style="margin-left: 30px"><%= @user.follow_count %> Following</h3>
        </div>
      </div>
      <h4 style="color: white">Stories</h4>
      <div class="cards">
        <% @user.posts.each do |post| %>
          <%= link_to post_path(post.token)  do %>
            <!--cards-->
            <%= render partial: "posts/card", locals: { post: post }%>
          <% end %>
        <% end %>
      </div>
  </div>
</div>
