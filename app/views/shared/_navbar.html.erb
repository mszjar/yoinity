<div class="navbar navbar-expand navbar-light navbar-lewagon" data-controller="navbar" data-action="scroll@window->navbar#updateNavbar">
  <div class="container-fluid" style="height: 70px">
    <ul class="navbar-brand d-flex align-items-center">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "yoinity_logo.png" %>
    <% end %>
      <p class="all-text-white mt-4", style="font-size: 28px">
        <%= link_to "Yoinity", "/", class: "yoinity-logo"%>
      </p>
    </ul>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
              <div class="search-form-control form-group">
                <%= simple_form_for :search, url: posts_path, method: :get do |f| %>
                <input placeholder="Search any topic, category or language" class="form-control string required" type="text" name="query" id="search_query" />
              </div>
            <% end %>
          <li class="nav-item active btn-create">
            <%= link_to "Create", "/p/new", class: "navbar-link" %>
          </li>
          <% unless current_user.subscription_status == 'active' %>
            <li class="nav-item all-text-grey">
              <%= link_to "Membership", "#", id: "checkout-button", data: { controller: "checkout", action: "click->checkout#checkout" }, class: "navbar-link" %>
            </li>
          <% end %>
          <li class="nav-item dropdown">
              <%= image_tag url_for(current_user.photo), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My stories", "/dashboard/show", class: "dropdown-item" %>
              <%= link_to "Saved for later", "/dashboard/saved", class: "dropdown-item" %>
              <%= link_to "Settings",edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", registration_path(resource_name), class: "navbar-link" %>
          </li>
          <li class="nav-item all-text-grey">
            <%= link_to "Sign up", new_user_registration_path, class: "navbar-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
