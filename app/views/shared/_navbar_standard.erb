<div class="navbar navbar-expand navbar-light navbar-lewagon fixed-top" data-controller="navbar" data-action="scroll@window->navbar#updateNavbar">
  <div class="container-fluid" style="height: 70px" >
    <ul class="navbar-brand d-flex align-items-center">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "yoinity_logo.png" %>
    <% end %>
      <p class="all-text-white mt-4", style="font-size: 28px">
        <% if user_signed_in? %>
        <%= link_to "Yoinity", "/posts", class: "navbar-link"%>
        <% else %>
        <%= link_to "Yoinity", "/", class: "navbar-link"%>
        <% end %>
      </p>
    </ul>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto" style="width: 100%">
        <% if user_signed_in? %>
          <li style="width: 100%">
            <div class="search-form-control form-group">
              <%= simple_form_for :search, url: posts_path, method: :get, html:{class: 'search-bar'} do |f|  %>
              <input placeholder="Search any topic, category or language" class="form-control string required" type="text" name="query" id="search_query"/>
            </div>
          </li>
          <% end %>
          <div class= "menu-container">
            <li class="nav-item all-text-grey">
              <%= link_to "Explore", "/posts", class: "navbar-link" %>
            </li>
            <li class="nav-item active all-text-grey">
              <%= link_to "Write", "/posts/new", class: "navbar-link" %>
            </li>
            <li class="d-flex nav-item active all-text-grey">
              <%= link_to "About", about_path, class: "navbar-link" %>
            </li>
            <li class="nav-item dropdown all-text-black">
              <% if current_user.photo.key == nil %>
                <%= image_tag "default_image.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
                <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "My stories", "/dashboard/show", class: "dropdown-item" %>
                <%= link_to "Saved for later", "/dashboard/saved", class: "dropdown-item" %>
                <%= link_to "Settings", edit_user_registration_path, class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
              </div>
            </li>
          </div>
        <% else %>
          <div class= "menu-container">
            <li class="nav-item all-text-grey">
              <%= link_to "Login", new_user_session_path, class: "navbar-link" %>
            </li>
            <li class="nav-item active all-text-grey">
              <%= link_to "About", about_path, class: "navbar-link" %>
            </li>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
