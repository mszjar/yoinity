<div class="navbar navbar-expand navbar-lewagon fixed-top" data-controller="navbar" data-action="scroll@window->navbar#updateNavbar">
  <div class="container-fluid" style="height: 70px" >
              <div>
                <ul class="navbar-brand d-flex align-items-center">
                  <%= link_to "/", class: "navbar-brand" do %>
                    <%= image_tag "yoinity_logo.png" %>
                  <% end %>
                  <p class="all-text-white mt-4", style="font-size: 28px">
                    <%= link_to "Yoinity", "/", class: "yoinity-logo"%>
                  </p>
                </ul>
              </div>

              <div class="navbar" id="navbarSupportedContent">
                    <ul class="navbar-nav" style="width: 100%">
                      <% if user_signed_in? %>
                        <div class= "menu-container">
                          <li class="nav-item all-text-grey btn-create">
                            <%= link_to "Create", "/p/new", class: "navbar-link" %>
                          </li>
                          <% unless current_user.subscription_status == 'active' %>
                            <li class="nav-item all-text-grey">
                              <%= link_to "Subscribe", "#", id: "checkout-button", data: { controller: "checkout", action: "click->checkout#checkout" }, class: "navbar-link" %>
                            </li>
                          <% end %>
                          <li class="nav-item dropdown all-text-black">
                              <%= image_tag url_for(current_user.photo), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                              <%= link_to "My stories", "/dashboard/show", class: "dropdown-item" %>
                              <%= link_to "Saved for later", "/dashboard/saved", class: "dropdown-item" %>
                              <%= link_to "Settings", edit_user_registration_path, class: "dropdown-item" %>
                              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
                            </div>
                          </li>
                        </div>
                      <% else %>
                        <div class= "menu-container">
                          <li class="nav-item all-text-grey">
                            <%= link_to "Login", new_user_session_path, class: "navbar-link" %>
                          </li>
                          <li class="nav-item all-text-grey">
                            <%= link_to "Sign up", new_user_registration_path, class: "navbar-link" %>
                          </li>
                        </div>
                      <% end %>
                    </ul>
              </div>

      </div>
</div>
