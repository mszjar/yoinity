<div class="banner">

  <div class="container home-page">
    <div class="banner h1">
      <h1><strong>Be curious, find the most valuable content</strong></h1>
    </div>
  </div>
  </div>

  <div class="container mt-5">
    <div class="card-last">
      <h1 class="text-center mb-5", style="color: grey">Trends</h1>
      <div class="cards">
        <% @posts.each do |post| %>
        <%= link_to post_path(post)  do %>
        <div class="card-trip">
          <% if   post.photo.key.nil? %>
            <%= image_tag "default_image.png", class:"car-photo" %>
          <% else %>
          <%= cl_image_tag post.photo.key %>
          <% end %>
          <div class="card-trip-infos card-design">
            <div>
              <h2><%=post.title%></h2>
              <p><%=post.content%></p>
            </div>
            <h2 class="card-trip-pricing"><%=post.url%></h2>
          </div>
        </div>
        <%end%>
        <% end %>
      </div>
    </div>
  </div>

</div>
