<div class="form-back" style="margin-top: 100px">
  <div class="form-group">
    <div class="form-container text">
      <h2>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email",class:"email-input" } %>
          <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password",class:"password-input" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions btn btn-classic">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
