            <!--Button categories-->
            <div class="d-flex justify-content-between" data-controller="tabs" >
              <h6 class="btn-dropdown tab-index active" data-tabs-target="tab" data-action="click->tabs#changeTab">All</h6>
              <h6 class="btn-dropdown tab-index" data-tabs-target="tab" data-action="click->tabs#changeTab">Technology</h6>
              <h6 class="btn-dropdown tab-index" data-tabs-target="tab" data-action="click->tabs#changeTab">Health</h6>
              <h6 class="btn-dropdown tab-index" data-tabs-target="tab" data-action="click->tabs#changeTab">Entrepreneurship</h6>
              <h6 class="btn-dropdown tab-index" data-tabs-target="tab" data-action="click->tabs#changeTab">StartUp</h6>
              <h6 class="btn-dropdown tab-index" data-tabs-target="tab" data-action="click->tabs#changeTab">Literary</h6>
              <h6 class="btn-dropdown tab-index" data-tabs-target="tab" data-action="click->tabs#changeTab">NFT Stories</h6>
            </div>

            <!--Tabs-->
            <div class="cards-header" data-controller="tabs">
              <h5 class="cards-header-item tab-index active" data-tabs-target="tab" data-action="click->tabs#changeTab">
              For you
              </h5>
              <h5 class="cards-header-item tab-index" data-tabs-target="tab" data-action="click->tabs#changeTab">
              Following
              </h5>
              <h5 class="cards-header-item tab-index " data-tabs-target="tab" data-action="click->tabs#changeTab">
              Highest quality
              </h5>
              <h5 class="cards-header-item tab-index" data-tabs-target="tab" data-action="click->tabs#changeTab">
              Most likable
              </h5>
            </div>

            <!--cards-->
                <div class="cards">
                    <% @posts.each do |post| %>
                    <%= link_to post_path(post)  do %>
                        <div  class="post-card-small" style="background-image: linear-gradient(to top, rgba(0, 0, 0, 0.9) 50%, rgba(255, 255, 255, 0.1) 70%), url('<%= cl_image_path post.photo.key %>')" >
                          <h4 class="like"><i class="fa-solid fa-heart" style="color: #FF3040;"></i> <%= post.post_likes.count %></h4>
                          <h4 class="quality"><i class="fa-solid fa-star" style="color: #ffd43b;"></i> <%= post.post_qualities.count %></h4>
                          <h5 class="language"><%= post.language %> from </h5>
                          <% if post.language == "English" %>
                            <div class= "england-flag"></div>
                          <% elsif post.language == "French" %>
                            <div class= "france-flag"></div>
                          <% elsif post.language == "Spanish" %>
                            <div class= "spain-flag"></div>
                          <% end %>
                          <div class="infos">
                            <h3 class="post-avatar"> <%= cl_image_tag post.user.photo.key, class: "avatar-small" %></h3>
                            <h2 class="title"><%=post.title%></h2>
                            <h3 class="nickname"> By <%=post.user.nickname%></h3>
                            <h3 class="nickname"><i class="fa-solid fa-badge-check" style="color: #ffffff;"></i></h3>
                            <h3 class="date"><%= post.created_at.strftime("%B %Y") %></h3>
                            <p class="content"><%= post.content %></p>
                          </div>
                          <h3 class="btn btn-classic read">Read</h3>
                        </div>
                    <%end%>
                    <%end%>
                </div>
            </div>
      </div>
</div>
