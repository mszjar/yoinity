<div class="container mt-5">
  <h1>Surf through stories 🏄🏽‍♂️, take what you want and read.</h1>
  <div class="cards mt-5">
    <% @posts.each do |post| %>
    <%= link_to post_path(post)  do %>
    <div class="card-post">
      <% if   post.photo.key.nil? %>
        <%= image_tag "default_image.png", class:"" %>
      <% else %>
      <%= cl_image_tag post.photo.key %>
      <% end %>
      <div class="card-post-infos">
        <div>
          <h2><%=post.title%></h2>
          <p><%=post.content%></p>
        </div>
        <h2 class="card-post-pricing"><%=post.url%></h2>
      </div>
    </div>
    <%end%>
    <% end %>
  </div>
</div>
