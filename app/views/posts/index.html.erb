<div class="post-container">
  <div class="post">
    <!--Tabs-->
    <div class="cards-header" data-controller="tabs">
      <h5 class="cards-header-item tab-index active" data-tabs-target="tab" data-action="click->tabs#changeTab">
        <%= link_to 'Explore', "/p", class: "tabs" %>
      </h5>
      <h5 class="cards-header-item tab-index" data-tabs-target="tab" data-action="click->tabs#changeTab">
        <%= link_to 'Following', following_posts_path, class: "tabs", remote: true %>
      </h5>
    </div>
    <div id="posts">
      <%= render partial: 'posts', locals: { posts: @posts } %>
      <% if @posts.next_page %>
        <div id="load-more" data-controller="load-more">
          <a href="<%= posts_path(page: @posts.next_page) %>" data-action="click->load-more#loadMore" data-load-more-target="link" class="show-more">Show More</a>
        </div>
      <% end %>
    </div>
  </div>
</div>
