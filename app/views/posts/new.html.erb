<div class="">
  <div class="form-back">
    <div class="form-group">
      <div class="form-container">
        <%= simple_form_for [@post] do |f| %>
            <div class= "header" style="text-align: right">
            <a href="/dashboard" class="exit-button"><i class="fa-sharp fa-regular fa-circle-xmark"></i></a>
              <%= f.submit "Publish", class: "form-button", input_html: { class: 'form-button' } %>
            </div>
            <p><%= f.input :title, class: "form-control", placeholder: "Add title here", label: false, input_html: { class: 'form-border form-title' } %></p>
            <p><%= f.input :content,as: :text , placeholder: "Write here", label: false, input_html: { rows: 30, class: 'form-border' } %></p>
            <div class="hyperlink-container"><i class="fa-solid fa-link fa-xs"></i><%= f.input :url, as: :url,  class: "form-control", placeholder: "Add your url", label: false, input_html: { class: 'form-border' } %></div>
            <div class="mt-5" ><%= f.input :photo, as: :file, placeholder: false, label: "Add an image", input_html: { class: 'form-image' } %></div>
          <% end %>
      </div>
    </div>
  </div>
</div>
