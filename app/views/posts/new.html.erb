<div class="form-back">
  <div class="form-group">
    <div class="form-container">
      <%= simple_form_for [@post], data: { controller: "post-form"} do |f| %>
        <div class= "header" style="text-align: right">
          <a href="/" class="exit-button"><i class="fa-sharp fa-regular fa-circle-xmark"></i></a>
          <%= f.submit "Publish", class: "form-button", input_html: { class: 'form-button' } %>
        </div>
        <p><%= f.input :title, class: "form-control", placeholder: "Add title here", label: false, input_html: { class: 'form-border form-title' } %></p>
        <p>
          <div class="text-area"><%= f.input :content, as: :text, placeholder: "Write here", label: false, input_html: { rows: 100, class: 'form-border'} %></div>
        </p>
        <div class="hyperlink-container" style="display: none;"><i class="fa-solid fa-link icon"></i><%= f.input :url, as: :url,  class: "form-control", placeholder: "Add your url", label: false, input_html: { class: 'form-border' } %></div>
        <div class="hyperlink-container" style="display: none;"><i class="fa-solid fa-language icon"></i><%= f.input :language, as: :string,  class: "form-control", placeholder: "Content's language", label: false, input_html: { class: 'form-border' } %></div>
        <div class="imagelink-container" data-controller="preview-image">
          <%= f.input :photo, as: :file, placeholder: false, label: "Cover image", input_html: { data: { action: "change->preview-image#preview", 'preview-image-target': 'input'}, class: 'form-image' } %>
          <img class="avatar-post" data-preview-image-target="preview" src="#" alt="Image preview" style="display: none;"/>
        </div>
      <% end %>
    </div>
  </div>
</div>
