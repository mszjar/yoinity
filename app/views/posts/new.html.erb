<div class="">
  <div class="form-back">
    <div style="text-align: right"><%= link_to "x", "/dashboard", class: "btn" %></div>
    <div class="form-group">
      <div class="text">
        <%= simple_form_for [@post] do |f| %>
            <div style="text-align: right">
              <%= f.submit "Publish", class: "form-button", input_html: { class: 'form-button' } %>
            </div>
            <p><%= f.input :title, class: "form-control", placeholder: "Title", label: false, input_html: { class: 'form-border form-title' } %></p>
            <p><%= f.input :content, as: :text, placeholder: "Write here", label: false, input_html: { rows: 30, class: 'form-border' } %></p>
            <div><%= f.input :url, as: :url,  class: "form-control", placeholder: "Add your url", label: false, input_html: { class: 'form-border' } %></div>
            <div class="mt-5" ><%= f.input :photo, as: :file, placeholder: false, label: "Add an image", input_html: { class: 'form-image' } %></div>
          <% end %>
      </div>
    </div>
  </div>
</div>
