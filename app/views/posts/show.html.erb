<div class="post" >
  <!--search-bar-->
  <%= render partial: "shared/search_bar" %>
  <!--Tabs-->
  <div class="cards-header mt-5" data-controller="tabs">
    <h6 class="cards-header-item tab-index" data-tabs-target="tab" data-action="click->tabs#changeTab">
      <%= link_to 'Explore', "/p", class: "tabs" %>
    </h6>
  </div>
  <div class="mt-5">
        <!--title-bar-->
        <%= render partial: "title_bar"%>
        <!--date-->
        <div class="nickname" style="color:#80808085;font-weight:lighter !important"><%= time_ago_in_words(@post.created_at) %> ago</div>
        <!--remixes-->
        <%= render partial: "remixes"%>
        <!--interactive-bar-->
        <%= render partial: "interactive_bar"%>
        <!--content-->
        <%= render partial: "content"%>
      <!-- reviews -->
      <div class="modal fade" id="reviewsModal" tabindex="-1" aria-labelledby="reviewsModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <%= render partial: "reviews" %>
          </div>
        </div>
      </div>

  </div>
</div>
