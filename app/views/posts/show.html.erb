                                        <%= f.input :content, class: "form-control", placeholder: "Type your reply here...", label: false %>
                                        <%= f.submit "Submit", class: "btn btn-flat show-comment-reply-btn" %>
                                      <% end %>
                                    </div>
                                  <% end %>
                                </div>
