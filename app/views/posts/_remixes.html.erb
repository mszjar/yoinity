<!--remixes bar-->
<div class="remixes-bar" >

  <!--remixes-->
  <div class="remixes">



    <!-- Remix button -->
    <div class="audio-player">
      <div class="avatar-container show-avatar-item">
        <% if @post.remixes.count >= 1 %>
          <div class="image-button" style="pointer-events: none;">
            <i class="fas fa-plus avatar"></i> <!-- Font Awesome 'add' icon -->
          </div>
        <% else %>
          <%= link_to "#remixModal", "data-bs-toggle" => "modal", "data-bs-target" => "#remixModal", class: "" do %>
            <i class="fas fa-plus avatar"></i> <!-- Font Awesome 'add' icon -->
          <% end %>
        <% end %>
      </div>
      <div class="d-flex justify-content-center"><p style="font-size: 9px" >Add new</p></div>
    </div>




    <!--remixes-->
    <div class="remixes" data-controller="play-all">
      <% @remixes.each do |remix| %>
        <div class="audio-player" data-controller="audio">
          <% if remix.present? && remix.audio.attached? %>
            <div data-action="mouseenter->audio#showControls mouseleave->audio#hideIcons click->audio#togglePlay" class="avatar-container show-avatar-item">
              <%= image_tag url_for(remix.user.photo), class: "avatar", loading: "lazy" %>
              <div class="avatar-overlay">
                <i class="play-icon fas fa-play" data-audio-target="playIcon" style="display: none;"></i>
                <i class="pause-icon fas fa-pause" data-audio-target="pauseIcon" style="display: none;"></i>
                <div class="green-overlay" data-audio-target="greenOverlay" style="display: none;"></div>
              </div>
            </div>
            <div class="d-flex justify-content-center"><p data-audio-target="nickname" style="font-size: 9px"><%= remix.user.nickname %></p></div>
            <audio data-play-all-target="audio" data-audio-target="audio" data-src="<%= rails_blob_path(remix.audio, disposition: "attachment") %>" type="<%= remix.audio.blob.content_type %>">
            </audio>
            <span class="current-time" data-audio-target="currentTime"></span>
            <div data-audio-target="progressContainer" class="progress-bar-container">
              <div class="progress-bar" data-audio-target="progressBar"></div>
            </div>
            <span class="duration" data-audio-target="duration"></span>

          <% end %>
        </div>
      <% end %>
      <!--play all button-->
      <div class="audio-player">
          <div data-action="click->play-all#togglePlayAll" class="avatar-container show-avatar-item">
            <div class="avatar" style="background-color:#1FDF64; border-radius:50%;"></div>
            <div class="avatar-overlay">
              <i class="play-icon fas fa-play" data-play-all-target="playAllIcon"></i>
              <i class="pause-icon fas fa-pause" data-play-all-target="pauseAllIcon" style="display: none;"></i>
              <div class="green-overlay" data-play-all-target="greenAllOverlay"></div>
            </div>
          </div>
          <div class="d-flex justify-content-center"><p data-play-all-target="nickname" style="font-size: 9px" >Play all</p></div>
        </div>
      </div>


  </div>

  <!-- Remix form (Modal) -->
  <div class="modal fade" id="remixModal" tabindex="-1" aria-labelledby="remixModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="remixModalLabel">Remix</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <% if user_signed_in?%>
            <%= simple_form_for @remix, url: remixes_path, html: { data: { controller: "recording", recording_target: "form" } } do |f| %>
              <%= f.input :post_id, as: :hidden, input_html: { value: @post.id, data: { recording_target: "post_id" } } %>
              <%= f.input :language, placeholder: "Enter language", label: false, input_html: { data: { recording_target: "language" } } %>

              <!-- File upload input -->
              <%= f.input :audio, as: :file, label: 'Or upload audio:', input_html: { data: { recording_target: "fileUpload" } } %>

              <!-- Added feedback div -->
              <div data-recording-target="messages" style="height: 30px; color: white;"></div>

              <div data-action="click->recording#startRecording" data-recording-target="start">
                <%= button_tag "Start recording", type: "button" %>
              </div>
              <div data-action="click->recording#stopRecording" data-recording-target="stop">
                <%= button_tag "Stop recording", type: "button" %>
              </div>
              <div data-action= "click->recording#submitForm">
                <%= f.submit "Submit Remix" %>
              </div>
            <% end %>
          <% else %>
            <p>You must be signed in to remix.</p>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>



</div>
